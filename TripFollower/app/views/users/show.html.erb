<div class="row">
  <h2>Welcome <%= @user.fname %> <%= @user.lname %></h2>
  <p><%= @user.email %> </p>
</div>

<div class="row">
  <%= link_to "Edit User", edit_user_path(@user) %>
  <%= link_to "Add Trip", new_trip_path(:user_id => @user.id) %>
  <%= link_to "Back to Users", users_path %>


  <% if signed_in? %>

    <h2> My Trips </h2>

    <%= render @user.trips %>

  <% end %>

</div>